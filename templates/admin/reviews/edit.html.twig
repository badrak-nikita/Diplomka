{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <main>
        <div class="container">
            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Редагувати вiдгук</h5>
                                    </div>

                                    <form class="row g-3 needs-validation" method="POST">
                                        <div class="col-12">
                                            <label for="reviewText" class="form-label">Текст</label>
                                            <textarea name="reviewText" class="form-control" id="reviewText" rows="4" required>{{ review.reviewText }}</textarea>
                                        </div>

                                        <div class="col-12">
                                            <label for="rating" class="form-label">Оцiнка</label>
                                            <input type="number" name="rating" class="form-control" id="rating" value="{{ review.rating }}" required min="1" max="5">
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-success w-100" type="submit">Зберегти</button>
                                        </div>
                                    </form>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </section>
        </div>
    </main>
{% endblock %}
