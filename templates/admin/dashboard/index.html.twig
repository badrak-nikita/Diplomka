{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    {% include 'admin/components/header.html.twig' %}
    {% include 'admin/components/sidebar.html.twig' %}

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Головна</h1>
        </div>

        <section class="section dashboard">
            <div class="row">

                <!-- Left side columns -->
                <div class="col-lg-8">
                    <div class="row">

                        <div class="col-xxl-4 col-md-6">
                            <div class="card info-card sales-card">
                                <div class="card-body">
                                    <h5 class="card-title">Активних замовленнь</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-cart"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>{{ pendingOrdersCount }}</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xxl-4 col-md-6">
                            <div class="card info-card revenue-card">
                                <div class="card-body">
                                    <h5 class="card-title">Зароблено</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-currency-dollar"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>{{ completedRevenue }} грн.</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xxl-4 col-xl-12">
                            <div class="card info-card customers-card">
                                <div class="card-body">
                                    <h5 class="card-title">Користувачів</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-people"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>{{ totalUsersCount }}</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Right side columns -->
                <div class="col-lg-4">

                    <div class="card">

                        <div class="card-body">
                            <h5 class="card-title">Остання активнiсть</h5>

                            <div class="activity">
                                {% for activity in recentActivities %}
                                    <div class="activity-item d-flex">
                                        <div class="activite-label">{{ activity.createdAt|date('d-m-Y') }}<p>{{ activity.createdAt|date('H:i') }}</p></div>

                                        {% if activity.description == 'Нове замовлення створено' %}
                                            <i class='bi bi-circle-fill activity-badge text-success align-self-start'></i>
                                        {% elseif activity.description == 'Додано новий вiдгук' %}
                                            <i class='bi bi-circle-fill activity-badge text-warning align-self-start'></i>
                                        {% endif %}

                                        <div class="activity-content">
                                            {{ activity.description }}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>


                        </div>
                    </div>

                </div>

            </div>
        </section>

    </main>

    {% include 'admin/components/footer.html.twig' %}

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
{% endblock %}
