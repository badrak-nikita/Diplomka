{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    {% include 'admin/components/header.html.twig' %}
    {% include 'admin/components/sidebar.html.twig' %}

    <main id="main" class="main">

        <div class="pagetitle d-flex justify-content-between align-items-center">
            <h1>Послуги</h1>
            <a href="{{ path('admin_services_create') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Додати послугу
            </a>
        </div>

        <section class="section dashboard">
            <div class="row">

                <div class="col-12">
                    <div class="card top-selling overflow-auto">

                        <div class="card-body pb-0">
                            <h5 class="card-title"></h5>
                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th scope="col">№</th>
                                        <th scope="col">Послуга</th>
                                        <th scope="col">Термiн</th>
                                        <th scope="col">Цiна</th>
                                        <th scope="col">Дiя</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for service in services %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ service.serviceName }}</td>
                                        <td>{{ service.duration }}</td>
                                        <td class="fw-bold">{{ service.price }}</td>
                                        <td>
                                            <a href="{{ path('admin_services_edit', {id: service.id}) }}" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i> Редагувати
                                            </a>
                                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ service.id }}">
                                                <i class="bi bi-trash"></i> Видалити
                                            </button>

                                            <!-- Delete modal -->
                                            <div class="modal fade" id="deleteModal{{ service.id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Підтвердження видалення</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Ви впевнені, що хочете видалити послугу "<strong>{{ service.serviceName }}</strong>"?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                                                            <form method="POST" action="{{ path('admin_services_delete', {id: service.id}) }}">
                                                                <button type="submit" class="btn btn-danger">Видалити</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>

            </div>
        </section>

    </main>

    {% include 'admin/components/footer.html.twig' %}

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
{% endblock %}
