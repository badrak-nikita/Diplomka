{% extends 'base.html.twig' %}

{% block body %}
    <link href="/assets/css/reviews.css" rel="stylesheet">
    <style>
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .pagination-list {
            list-style: none;
            padding: 0;
            display: flex;
            gap: 8px;
        }

        .pagination-list li {
            display: inline-block;
        }

        .pagination-list a {
            display: block;
            padding: 10px 14px;
            text-decoration: none;
            color: #007bff;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);
            transition: all 0.3s ease-in-out;
        }

        .pagination-list a:hover {
            background-color: #007bff;
            color: #fff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.6);
        }

        .pagination-list .active a {
            background-color: #007bff;
            color: #fff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.8);
            pointer-events: none;
            font-weight: bold;
        }
    </style>
    {% include 'components/header.html.twig' %}

    <main class="main">
        <section id="hero" class="hero section">
            <div class="container" data-aos="fade-up" data-aos-delay="100">
                <div class="row">

                    <!-- Reviews -->
                    <div class="col-lg-8">
                        <h2 class="section-title">Відгуки наших клієнтів</h2>

                        {% for review in paginatedReviews %}
                            <div class="review-item">

                                <div class="review-avatar-section">
                                    <div class="review-avatar">
                                        <img src="{{ review.author.profileImage ?: asset('assets/img/user.png') }}"
                                             alt="User Avatar">
                                    </div>
                                    <div class="review-user">
                                        {{ review.author.username ?: review.author.email }}
                                    </div>
                                </div>

                                <div class="review-content-section">
                                    <div>
                                        <div class="review-stars">
                                            {% for i in 1..5 %}
                                                <i class="bi {{ i <= review.rating ? 'bi-star-fill' : 'bi-star' }}"></i>
                                            {% endfor %}
                                        </div>
                                        <p class="review-text">{{ review.reviewText }}</p>
                                    </div>
                                    <div class="review-date">
                                        {% set months = {
                                            'January': 'січня', 'February': 'лютого', 'March': 'березня',
                                            'April': 'квітня', 'May': 'травня', 'June': 'червня',
                                            'July': 'липня', 'August': 'серпня', 'September': 'вересня',
                                            'October': 'жовтня', 'November': 'листопада', 'December': 'грудня'
                                        } %}
                                        {% set formattedDate = review.createdAt|date('d F Y') %}
                                        {{ formattedDate|replace(months) }}
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <p>Немає відгуків</p>
                        {% endfor %}

                        <div class="pagination">
                            {% if paginatedReviews.pageCount > 1 %}
                                <ul class="pagination-list">
                                    {% if paginatedReviews.currentPageNumber > 1 %}
                                        <li><a href="{{ path('app_reviews', { page: paginatedReviews.currentPageNumber - 1 }) }}"><</a></li>
                                    {% endif %}

                                    {% for page in range(1, paginatedReviews.pageCount) %}
                                        <li class="{% if page == paginatedReviews.currentPageNumber %}active{% endif %}">
                                            <a href="{{ path('app_reviews', { page: page }) }}">{{ page }}</a>
                                        </li>
                                    {% endfor %}

                                    {% if paginatedReviews.currentPageNumber < paginatedReviews.pageCount %}
                                        <li><a href="{{ path('app_reviews', { page: paginatedReviews.currentPageNumber + 1 }) }}">></a></li>
                                    {% endif %}
                                </ul>
                            {% endif %}
                        </div>

                    </div>

                    <!-- Write Review -->
                    <div class="col-lg-4">
                        <h2 class="section-title">Залиште свій відгук</h2>

                        <form id="reviewForm">
                            <div class="mb-3">
                                <textarea name="reviewText" id="reviewText" class="form-control" rows="4" placeholder="Ваш відгук"
                                          {% if not isAuthenticated %}disabled title="Будь ласка, спочатку зайдiть в свiй акаунт"{% endif %} required></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Ваша оцінка</label>
                                <div class="review-rating">
                                    {% for i in 1..5 %}
                                        <i class="bi bi-star" data-star="{{ i }}"
                                           {% if not isAuthenticated %}title="Будь ласка, спочатку зайдiть в свiй акаунт"{% endif %}></i>
                                    {% endfor %}
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary" {% if not isAuthenticated %}disabled{% endif %}>Відправити відгук</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

    {% include 'components/footer.html.twig' %}

    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script>
        let rating = 0;

        function setRating(star) {
            rating = star;
            document.querySelectorAll('#reviewForm .bi-star').forEach((el, index) => {
                if (index < star) {
                    el.classList.add('selected');
                } else {
                    el.classList.remove('selected');
                }
            });
        }

        document.querySelectorAll('#reviewForm .bi-star').forEach((star, index) => {
            star.addEventListener('click', () => setRating(index + 1));

            star.addEventListener('mouseover', () => {
                document.querySelectorAll('#reviewForm .bi-star').forEach((el, i) => {
                    if (i <= index) {
                        el.classList.add('hovered');
                    }
                });
            });

            star.addEventListener('mouseout', () => {
                document.querySelectorAll('#reviewForm .bi-star').forEach(el => el.classList.remove('hovered'));
            });
        });

        document.getElementById('reviewForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const reviewText = document.getElementById('reviewText').value.trim();

            fetch('/reviews/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({
                    reviewText: reviewText,
                    rating: rating
                })
            })
                .then(response => response.json())
                .then(data => {
                    location.reload();
                })
                .catch(error => console.error('Error:', error));
        });
    </script>
{% endblock %}
